{
  "display": "Default",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "pretty": true,

    "baseUrl": "./src",
    "paths": {
      "@config": ["config"],
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@database": ["database"],
      "@database/*": ["database/*"],
      "@errors": ["errors"],
      "@errors/*": ["errors/*"],
      "@interfaces": ["interfaces"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares": ["middlewares"],
      "@middlewares/*": ["middlewares/*"],
      "@routes": ["routes"],
      "@routes/*": ["routes/*"],
      "@services": ["services"],
      "@services/*": ["services/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json", "src/**/*.d.ts"],
  "exclude": ["dist", "node_modules"]
}
